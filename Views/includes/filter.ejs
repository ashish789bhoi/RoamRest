  taxswitch.addEventListener("click", () => {
    console.log("clicked");

    if (taxswitch.checked) {
      for (let i = 0; i < withtax.length; i++) {
        withtax[i].style.display = "block"; // or "inline" or any other appropriate value
      }

      for (let i = 0; i < withouttax.length; i++) {
